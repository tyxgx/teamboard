datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

model User {
  id               String            @id @default(uuid())
  name             String
  email            String            @unique
  image            String? // Optional profile picture
  googleId         String? // Optional Google ID
  role             String            @default("MEMBER")
  comments         Comment[]
  boardMemberships BoardMembership[]
  createdBoards    Board[]           @relation("UserCreatedBoards")
  lastCommentBoards Board[]          @relation("BoardLastCommentSender")
}

model Board {
  id            String            @id @default(uuid())
  name          String
  code          String            @unique // Unique invite code
  createdAt     DateTime          @default(now())
  lastActivity  DateTime          @default(now())
  anonymousEnabled Boolean       @default(false)
  lastCommentAt        DateTime?
  lastCommentPreview   String?
  lastCommentVisibility Visibility?
  lastCommentAnonymous  Boolean   @default(false)
  lastCommentSenderId   String?
  lastCommentSenderName String?
  lastCommentSender     User?     @relation("BoardLastCommentSender", fields: [lastCommentSenderId], references: [id])
  createdBy     String
  createdByUser User              @relation("UserCreatedBoards", fields: [createdBy], references: [id])
  comments      Comment[]
  members       BoardMembership[]

  @@index([lastActivity], map: "idx_board_last_activity")
  @@index([lastCommentAt], map: "idx_board_last_comment_at")
}

model BoardMembership {
  id      String @id @default(uuid())
  userId  String
  boardId String
  role    Role   @default(MEMBER)
  pinned  Boolean @default(false)
  status  MembershipStatus @default(ACTIVE)
  leftAt  DateTime?

  user  User  @relation(fields: [userId], references: [id])
  board Board @relation(fields: [boardId], references: [id])

  @@unique([userId, boardId])
  @@index([userId, status], map: "idx_boardmembership_user_status")
  @@index([userId], map: "idx_boardmembership_user")
}

model Comment {
  id          String     @id @default(uuid())
  content     String
  visibility  Visibility
  createdById String
  boardId     String
  anonymous   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  // Optional client-generated UUID for idempotency and optimistic sends
  clientId    String?

  createdBy User  @relation(fields: [createdById], references: [id])
  board     Board @relation(fields: [boardId], references: [id])

  @@index([boardId, createdAt], map: "idx_comment_board_created")
  @@index([boardId, createdAt, id], map: "idx_comment_board_created_id")
  @@unique([boardId, clientId], map: "uq_comment_board_client_id")
  @@index([createdById], map: "idx_comment_created_by")
  @@index([boardId, visibility, createdAt], map: "idx_comment_board_visibility_created")
}

enum Role {
  ADMIN
  MEMBER
}

enum MembershipStatus {
  ACTIVE
  LEFT
}

enum Visibility {
  ADMIN_ONLY
  EVERYONE
}
