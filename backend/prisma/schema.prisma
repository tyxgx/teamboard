datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

model User {
  id               String            @id @default(uuid())
  name             String
  email            String            @unique
  image            String? // Optional profile picture
  googleId         String? // Optional Google ID
  role             String            @default("MEMBER")
  comments         Comment[]
  boardMemberships BoardMembership[]
  createdBoards    Board[]           @relation("UserCreatedBoards")
}

model Board {
  id            String            @id @default(uuid())
  name          String
  code          String            @unique // Unique invite code
  createdAt     DateTime          @default(now())
  lastActivity  DateTime          @default(now())
  anonymousEnabled Boolean       @default(false)
  createdBy     String
  createdByUser User              @relation("UserCreatedBoards", fields: [createdBy], references: [id])
  comments      Comment[]
  members       BoardMembership[]
}

model BoardMembership {
  id      String @id @default(uuid())
  userId  String
  boardId String
  role    Role   @default(MEMBER)
  pinned  Boolean @default(false)

  user  User  @relation(fields: [userId], references: [id])
  board Board @relation(fields: [boardId], references: [id])

  @@unique([userId, boardId])
}

model Comment {
  id          String     @id @default(uuid())
  content     String
  visibility  Visibility
  createdById String
  boardId     String
  anonymous   Boolean    @default(false)
  createdAt   DateTime   @default(now())

  createdBy User  @relation(fields: [createdById], references: [id])
  board     Board @relation(fields: [boardId], references: [id])
}

enum Role {
  ADMIN
  MEMBER
}

enum Visibility {
  ADMIN_ONLY
  EVERYONE
}
